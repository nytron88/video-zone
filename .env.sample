# ---------------------------------------------------------------------------------------------
# BACKEND CONFIGURATION

# Server Port
PORT=                      # Example: 3000

# CORS Configuration
CORS_ORIGIN=               # Example: http://localhost:5173 (frontend origin)

# MongoDB Database URI
MONGODB_URI=               # Example: mongodb+srv://username:password@cluster.mongodb.net/dbname

# Authentication
ACCESS_TOKEN_SECRET=       # Secret key for signing access tokens
ACCESS_TOKEN_EXPIRY=       # Access token expiry duration (e.g., 15m, 1h)
REFRESH_TOKEN_SECRET=      # Secret key for signing refresh tokens
REFRESH_TOKEN_EXPIRY=      # Refresh token expiry duration (e.g., 7d)

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=     # Your Cloudinary cloud name
CLOUDINARY_API_KEY=        # Your Cloudinary API key
CLOUDINARY_API_SECRET=     # Your Cloudinary API secret

# ---------------------------------------------------------------------------------------------
# FRONTEND CONFIGURATION

# Server Base URL
VITE_SERVER_BASE_URL=      # Example: http://localhost:3000 (backend API base URL)
